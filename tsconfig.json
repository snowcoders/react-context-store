{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/",
    "esModuleInterop": true,
    "importHelpers": false,
    "jsx": "react",
    "lib": ["ES6", "DOM"],
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "sourceMap": true,
    "target": "ES6",
    "removeComments": true,
  },
  "extends": "@snowcoders/renovate-config",
  "exclude": ["./src/**/*.test.ts", "./src/**/*.test.tsx"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
